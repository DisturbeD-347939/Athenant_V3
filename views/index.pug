html

  head

    title #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="javascripts/jquery.js")
    script. 
      var error = #{error}
    script(src="javascripts/index.js")
    link(rel="shortcut icon", type="image/png", href="/images/favicon.png")
  body#index
    div#startingPage
      h1 Athenant
      h2 Enter your Twitter Handle!
      
      p#error
      form(method='POST' action='/result')
        div.form-group
          label(for='twitterid') @:
          input#twitterid(type='text', placeholder='Username' name='twitterid')
        button.btn.btn-primary(type='submit') Check your information!