html

  head

    title #{title}
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="javascripts/jquery.js")
    script. 
      var error = #{error}
    script(src="javascripts/index.js")
  body

    h1= title
    p Welcome to #{title}

          h2 Enter your Twitter Handle!
          
          p#error
          form(method='POST' action='/result')
            div.form-group
              label(for='twitterid') @:
              input#twitterid(type='text', placeholder='Username' name='twitterid')
            button.btn.btn-primary(type='submit') Check your information!